<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="line">

    <stroke
        android:width="@dimen/d1"
        android:color="#e5e5e5"
        android:dashGap="@dimen/d5"
        android:dashWidth="@dimen/d6"/>

</shape>
