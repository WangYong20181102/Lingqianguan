<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_down"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/FC_F5F5F5"
        android:orientation="vertical">

        <View
            android:id="@+id/v_lqb_title_height"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d44"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_lqb_down"
            android:layout_width="match_parent"
            android:layout_height="222.5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/d10"
                android:background="@drawable/lqb_down_round_rect2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d25"
                    android:background="@drawable/lqb_down_round_rect1"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/d21"
                    android:paddingRight="@dimen/d21"
                    android:text="安全保障"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/s15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/d21"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lqb_down2"
                    android:drawablePadding="@dimen/d6"
                    android:gravity="center"
                    android:text="中房前海置业战略入股"
                    android:textColor="@color/FC_3F1E00"
                    android:textSize="@dimen/s16"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/d21"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lqb_down1"
                    android:drawablePadding="@dimen/d6"
                    android:gravity="center"
                    android:text="注册资金一亿元实力保障"
                    android:textColor="@color/FC_3F1E00"
                    android:textSize="@dimen/s16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/d21"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lqb_down3"
                    android:drawablePadding="@dimen/d6"
                    android:gravity="center"
                    android:text="前海股权交易中心挂牌企业"
                    android:textColor="@color/FC_3F1E00"
                    android:textSize="@dimen/s16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/d23.7"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lqb_down4"
                    android:drawablePadding="@dimen/d6"
                    android:gravity="center"
                    android:text=" 合规保障再筑坚实壁垒"
                    android:textColor="@color/FC_3F1E00"
                    android:textSize="@dimen/s16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/d23"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lqb_down5"
                    android:drawablePadding="@dimen/d6"
                    android:gravity="center"
                    android:text="华海保险提供交易资金安全保障"
                    android:textColor="@color/FC_3F1E00"
                    android:textSize="@dimen/s16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_earningsView"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:background="@drawable/me_drawable_background"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/d10"
            android:layout_marginLeft="@dimen/d10"
            android:orientation="vertical"
            android:weightSum="10">

            <com.wtjr.lqg.widget.TextViewWrapContent
                android:id="@+id/tv_investAndEarnings"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/d10"
                android:layout_marginLeft="@dimen/d25"
                android:layout_marginRight="@dimen/d25"
                android:layout_weight="1"
                android:textColor="@color/FC_999999"
                android:textSize="@dimen/s16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/d12">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/tv_scale_value"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:focusable="false"
                        android:inputType="number"
                        android:focusableInTouchMode="false"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/d10"
                        android:paddingRight="@dimen/d10"
                        android:text="0"
                        android:textColor="#f85c07"
                        android:textSize="@dimen/s24" />
                    <!--<TextView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="0dp"-->
                        <!--android:layout_weight="0.5"-->
                        <!--android:paddingLeft="@dimen/d10"-->
                        <!--android:paddingRight="@dimen/d10" />-->
                    <View
                        android:layout_height="@dimen/d3"
                        android:layout_width="match_parent"
                        android:background="@drawable/xuxian"
                        android:layerType="software"/>
                    <!--<com.wtjr.lqg.widget.LineEditText-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="0dp"-->
                        <!--android:layout_weight="0.5"-->
                        <!--android:background="@null"-->
                        <!--android:focusable="false"-->
                        <!--android:focusableInTouchMode="false"-->
                        <!--android:paddingLeft="@dimen/d10"-->
                        <!--android:paddingRight="@dimen/d10"/>-->
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/view1">

                    <com.wtjr.lqg.widget.XCRecyclerView
                        android:id="@+id/rv_lv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/d1"
                        android:background="#ff0000" />
                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d10"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_app_bg"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d10"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/lqb_bottom_bg"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_pillarView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@color/color_app_bg"
                android:orientation="horizontal"
                android:visibility="visible">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>