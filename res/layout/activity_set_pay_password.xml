<?xml version="1.0" encoding="utf-8"?>
<!-- 设置支付密码页面页面布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/immersion_status"
    android:orientation="vertical" >

    <!-- 标题 -->

    <include layout="@layout/include_activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d15"
            android:textColor="@color/FC_999999"
            android:text="@string/pay_prompt" />

        <LinearLayout
            android:id="@+id/ll_pay_password_alter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >
            <com.wtjr.lqg.widget.UsuallyLayoutItem
                android:id="@+id/uli_amend_pas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:com_ImageContentrScrL="@null"
                app:com_ImageLeftMarginL="@dimen/d1"
                app:com_textTvContentLMarginL="@dimen/d12"
                app:com_textTvContentL="@string/pay_amend_pas" />

            <View style="@style/line" />

            <com.wtjr.lqg.widget.UsuallyLayoutItem
                android:id="@+id/uli_forget_pas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:com_ImageContentrScrL="@null"
                app:com_ImageLeftMarginL="@dimen/d1"
                app:com_textTvContentLMarginL="@dimen/d12"
                app:com_textTvContentL="@string/pay_forget_pas" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pay_password_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.wtjr.lqg.widget.UsuallyLayoutItem
                android:id="@+id/uli_pay_password_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:com_ImageContentrScrL="@null"
                app:com_ImageLeftMarginL="@dimen/d1"
                app:com_textTvContentLMarginL="@dimen/d12"
                app:com_textTvContentL="设置支付密码" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>