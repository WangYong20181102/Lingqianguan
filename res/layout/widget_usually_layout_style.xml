<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d20"
    android:layout_marginLeft="@dimen/d30"
    android:layout_marginRight="@dimen/d30"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_home_usually_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/home_usually_gold"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iamge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/home_lqg_dqb_dot_unit"/>

    <TextView
        android:id="@+id/tv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d25"
        android:layout_toRightOf="@id/iamge"
        android:gravity="center_vertical"
        android:text="好好好好好好"
        android:textColor="@color/FC_666666"
        android:textSize="@dimen/s14"/>

    <TextView
        android:id="@+id/tv_down"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:text="好好好好"
        android:textColor="#fa8f21"
        android:textSize="@dimen/s14"/>

</RelativeLayout>