<?xml version="1.0" encoding="utf-8"?>
<!-- 收益比例图 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wtjr.lqg.widget.roundarctextprogressbar.RoundPercentTextProgressBar
        android:id="@+id/lqg_dqb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        app:bg_progressBar="@color/FC_DBDBDB"
        app:circle_progressBar_color="@color/FC_FD8B48"
        app:circle_radius="120"/>
    <com.wtjr.lqg.widget.roundarctextprogressbar.RoundPercentTextProgressBar
        android:id="@+id/lqb_earnings_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        app:bg_progressBar="@color/FC_F5F5F5"
        app:circle_progressBar_color="@color/FC_FEDB40"
        app:circle_radius="145"/>
    <!--<com.wtjr.lqg.widget.IncomeRatioView-->
        <!--android:id="@+id/incomeRatioView"-->
        <!--android:layout_width="@dimen/d135"-->
        <!--android:layout_height="@dimen/d135"-->
        <!--android:layout_centerInParent="true"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tomorrowTotalEarningsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计收益"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s12"/>

        <RelativeLayout
            android:id="@+id/rl_tomorrowTotalEarnings"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="@dimen/d40">

            <ImageView
                android:id="@+id/iv_tomorrowTotalEarnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d24"
                android:src="@drawable/home_big_gold"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_tomorrowTotalEarnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tomorrowTotalEarnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="#fd8b49"
                    android:textSize="@dimen/s18"/>

                <TextView
                    android:id="@+id/tv_tomorrowTotalEarningsUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/FC_666666"
                    android:textSize="@dimen/s12"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>