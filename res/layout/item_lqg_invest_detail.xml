<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/d15"
    android:paddingLeft="@dimen/d18"
    android:paddingRight="@dimen/d18"
    android:paddingTop="@dimen/d15" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="零钱罐贷款10086"
            android:textColor="@color/FC_3F1E00"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="融资金额(元)"
            android:textColor="@color/FC_C9A670"
            android:textSize="@dimen/s14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d17" >

            <ProgressBar
                android:id="@+id/pb_refundProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/tv_status"
                android:layout_alignRight="@+id/tv_status"
                android:layout_centerVertical="true"
                android:progressDrawable="@drawable/progress_lqg_invest" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lines="1"
                android:paddingLeft="@dimen/d15"
                android:paddingRight="@dimen/d15"
                android:text="正常还款中 0/12 期"
                android:textColor="@color/white"
                android:textSize="@dimen/s13" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="21132131"
            android:textColor="#FF5a00"
            android:textSize="@dimen/s13" />
    </RelativeLayout>

</LinearLayout>