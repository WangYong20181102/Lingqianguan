<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d60"
            android:background="@color/white"
            android:paddingLeft="@dimen/d18" >

            <TextView
                android:id="@+id/child_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="0.00"
                android:textSize="@dimen/s20" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/d18" >

                <TextView
                    android:id="@+id/child_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="可用余额-->零钱宝"
                    android:textColor="@color/FC_5C3012"
                    android:textSize="@dimen/s11" />

                <TextView
                    android:id="@+id/child_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/child_type"
                    android:layout_marginTop="@dimen/d4"
                    android:text="11-25 10：00"
                    android:textColor="@color/FC_5C3012"
                    android:textSize="@dimen/s11" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            style="@style/line"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/d18"
            android:layout_marginLeft="@dimen/d18"/>

        <include layout="@layout/item_fund_log_child3" />
    </LinearLayout>

</RelativeLayout>