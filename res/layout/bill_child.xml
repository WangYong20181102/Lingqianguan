<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d60">

            <TextView
                android:id="@+id/tv_deal_record_icon"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d17"
                android:background="@drawable/ic_launcher"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/s26"/>

            <TextView
                android:id="@+id/tv_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d20"
                android:layout_toRightOf="@+id/tv_deal_record_icon"
                android:text="收益"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s15"/>

            <TextView
                android:id="@+id/tv_child_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d24"
                android:text="0.00"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s15"/>

            <View
                android:id="@+id/v_heng_xian"
                style="@style/line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/d60"
                android:background="#dddddd"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>