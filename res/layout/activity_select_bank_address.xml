<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:orientation="vertical" >

    <include layout="@layout/include_activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_bg"
        android:orientation="vertical" >

        <TextView
           
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d30"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d16"
            android:text="当前位置"
            android:textColor="@color/FC_999999"
            android:textSize="@dimen/s14" />

        <TextView
            android:id="@+id/tv_curron_loaction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d45"
            android:background="@drawable/layout_item_state"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d16"
            android:drawableLeft="@drawable/loaction"
            android:drawablePadding="@dimen/d10"
            android:text="点击定位..."
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d45"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d16"
             android:textColor="@color/FC_999999"
            android:text="选择省市"
            android:textSize="@dimen/s14" />
        

        <ListView
            android:id="@+id/lv_province"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:overScrollMode="never" >
        </ListView>
    </LinearLayout>

</LinearLayout>