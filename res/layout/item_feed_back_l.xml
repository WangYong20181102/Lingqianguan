<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/d10"
    android:paddingTop="@dimen/d10" >

    <TextView
        android:id="@+id/tv_time_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="10:00"
        android:textColor="@color/FC_BLACK6F" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_time_l"
        android:layout_marginTop="@dimen/d15">

        <com.wtjr.lqg.widget.CircleImageView
            android:id="@+id/image_serivce_head_l"
            android:layout_width="@dimen/d50"
            android:layout_height="@dimen/d50"
            app:civ_border_overlay="true"
            app:civ_border_width="@dimen/d1" />

        <TextView
            android:id="@+id/tv_serivce_name_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/d10"
            android:layout_toRightOf="@+id/image_serivce_head_l"
            android:text="稳通客服"
            android:textColor="@color/FC_BLACK6F"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_serivce_head_l"
            android:layout_marginRight="@dimen/d60"
            android:layout_marginLeft="@dimen/d10"
            android:background="@drawable/feedback_img_dialogue"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_context_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/d5"
                android:textSize="@dimen/s15"
                android:textColor="@color/FC_333333"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>