<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_head_portrait1"
        android:layout_width="@dimen/d95"
        android:layout_height="@dimen/d95"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_item_head_portrait_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/iv_item_head_portrait1"
        android:layout_alignRight="@+id/iv_item_head_portrait1"
        android:src="@drawable/head_check"
        android:layout_marginRight="@dimen/d5"
        android:layout_marginBottom="@dimen/d5"
        android:visibility="gone" />

</RelativeLayout>