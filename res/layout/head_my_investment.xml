<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d10"
        android:background="@color/white"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/d100"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.wtjr.lqg.widget.UpDownTextView
                android:id="@+id/udtv_nrcyIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                app:down_text_color="@color/FC_FFC62A"
                app:down_text_content="0.00"
                app:down_text_size="@dimen/s20"
                app:text_gravity="left"
                app:up_down_margin="@dimen/d10"
                app:up_text_color="@color/FC_3F1E00"
                app:up_text_content="待获收益(元)"
                app:up_text_size="@dimen/s13" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/d0.5"
            android:layout_height="@dimen/d50"
            android:layout_gravity="center_vertical"
            android:background="#dddddd" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/d100"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <com.wtjr.lqg.widget.UpDownTextView
                android:id="@+id/udtv_nrcyPrinciple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                app:down_text_color="@color/FC_FFC62A"
                app:down_text_content="0.00"
                app:down_text_size="@dimen/s20"
                app:text_gravity="left"
                app:up_down_margin="@dimen/d10"
                app:up_text_color="@color/FC_3F1E00"
                app:up_text_content="待收本金(元)"
                app:up_text_size="@dimen/s13" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>