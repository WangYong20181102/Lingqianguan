<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bill_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/d60"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bill_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d15"
            android:text="现金奖励->可用余额"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/bill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d15"
            android:text="01-01  10:00"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s13" />

    </LinearLayout>

    <View style="@style/line_h2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/d60"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_state1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s13" />

        <View
            android:id="@+id/v_empty1"
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d0.5"
            android:background="@color/FC_666666"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_bill_money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-150000,00"
            android:textColor="@color/FC_FE8080"
            android:textSize="@dimen/s13" />

    </LinearLayout>

    <View style="@style/line_h2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/d60"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定期标投资"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s13" />

        <View
            android:id="@+id/v_empty2"
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d0.5"
            android:background="@color/FC_666666"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_bill_money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+150000,00"
            android:textColor="@color/FC_5BD3B0" />
    </LinearLayout>
</LinearLayout>