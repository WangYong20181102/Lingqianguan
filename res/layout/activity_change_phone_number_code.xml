<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:orientation="vertical">

    <include layout="@layout/include_activity_title" />

    <!--<View style="@style/line"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d30"
            android:text="@string/change_prompt"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s15" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d15"
            android:textColor="@color/FC_FF9900"
            android:textSize="@dimen/s15" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d15"
            android:text="@string/change_prompt1"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s15" />

        <com.wtjr.lqg.widget.ClearEditText
            android:id="@+id/edt_new_phone"
            style="@style/editTextStyle"
            android:layout_marginTop="@dimen/d30"
            android:hint="输入新手机号码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/d16"
            android:paddingRight="@dimen/d16">

            <requestFocus />
        </com.wtjr.lqg.widget.ClearEditText>

        <Button
            android:id="@+id/btn_submit"
            style="@style/buttonStyle_1"
            android:layout_marginTop="@dimen/d30"
            android:text="@string/submit" />
    </LinearLayout>

</LinearLayout>