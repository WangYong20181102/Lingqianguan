<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_paiming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/d36"
        android:paddingTop="@dimen/d15" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/investment_log1" />

            <TextView
                android:id="@+id/tv_investment_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:text="第一名"
                android:textColor="@color/FC_666666"
                android:textSize="@dimen/s15" />

            <TextView
                android:id="@+id/tv_investment_one_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:background="@drawable/investment_log_round_rect"
                android:gravity="center"
                android:paddingBottom="@dimen/d2"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:paddingTop="@dimen/d2"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/s15" />
        </LinearLayout>

        <View style="@style/line_h" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/investment_log2" />

            <TextView
                android:id="@+id/tv_investment_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:text="第二名"
                android:textColor="@color/FC_666666"
                android:textSize="@dimen/s15" />

            <TextView
                android:id="@+id/tv_investment_two_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:background="@drawable/investment_log_round_rect"
                android:gravity="center"
                android:paddingBottom="@dimen/d2"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:paddingTop="@dimen/d2"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/s15" />
        </LinearLayout>

        <View style="@style/line_h" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/investment_log3" />

            <TextView
                android:id="@+id/tv_investment_three_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:text="第三名"
                android:textColor="@color/FC_666666"
                android:textSize="@dimen/s15" />

            <TextView
                android:id="@+id/tv_investment_three_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d10"
                android:background="@drawable/investment_log_round_rect"
                android:gravity="center"
                android:paddingBottom="@dimen/d2"
                android:paddingLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:paddingTop="@dimen/d2"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/s15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/d11"
        android:paddingBottom="@dimen/d11" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户"
            android:textColor="@color/FC_CCCCCC"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="投标金额"
            android:textColor="@color/FC_CCCCCC"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/FC_CCCCCC"
            android:textSize="@dimen/s16" />
    </LinearLayout>

</LinearLayout>