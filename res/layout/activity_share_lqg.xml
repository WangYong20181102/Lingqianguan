<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:orientation="vertical" >

    <include layout="@layout/include_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d18"
                android:layout_marginTop="@dimen/d20"
                android:text="1、让朋友用手机扫下面二维码即可安装"
                android:textColor="@color/FC_666666"
                android:textSize="@dimen/s16" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/d30"
                android:layout_marginTop="@dimen/d20" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_lqg" />

                <ImageView
                    android:id="@+id/iv_linshi_img"
                    android:layout_width="@dimen/d0"
                    android:layout_height="@dimen/d0"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/iv_lqg_qr_code"
                    android:layout_width="@dimen/d125"
                    android:layout_height="@dimen/d125"
                    android:layout_centerInParent="true"
                    android:src="@drawable/lqg_2code" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d18"
                    android:text="2、还可以通过以下方式分享给朋友"
                    android:textColor="@color/FC_666666"
                    android:textSize="@dimen/s16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d20" >

                    <Button
                        android:id="@+id/btn_weixin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/layout_item_state"
                        android:drawablePadding="@dimen/d16"
                        android:drawableTop="@drawable/weixin"
                        android:text="微信好友"
                        android:textColor="@color/FC_666666"
                        android:textSize="@dimen/s13" />

                    <Button
                        android:id="@+id/btn_weixin_circle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/layout_item_state"
                        android:drawablePadding="@dimen/d16"
                        android:drawableTop="@drawable/weixin_circle"
                        android:text="朋友圈"
                        android:textColor="@color/FC_666666"
                        android:textSize="@dimen/s13" />

                    <Button
                        android:id="@+id/btn_Qzone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/layout_item_state"
                        android:drawablePadding="@dimen/d16"
                        android:drawableTop="@drawable/zone"
                        android:text="QQ空间"
                        android:textColor="@color/FC_666666"
                        android:textSize="@dimen/s13" />

                    <Button
                        android:id="@+id/btn_qq"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/layout_item_state"
                        android:drawablePadding="@dimen/d16"
                        android:drawableTop="@drawable/qq"
                        android:text="腾讯QQ"
                        android:textColor="@color/FC_666666"
                        android:textSize="@dimen/s13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d25"
                    android:weightSum="4" >

                    <Button
                        android:id="@+id/btn_sina"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/layout_item_state"
                        android:drawablePadding="@dimen/d16"
                        android:drawableTop="@drawable/sina"
                        android:text="新浪微博"
                        android:textColor="@color/FC_666666"
                        android:textSize="@dimen/s13" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>