<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/d30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/d13"
                android:layout_height="@dimen/d13"
                android:src="@drawable/home_lqb_unit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="零钱宝"
                android:layout_marginLeft="@dimen/d10"
                android:textSize="@dimen/s13"
                android:textColor="@color/FC_666666"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_lqb_earnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无收益"
            android:layout_marginLeft="@dimen/d23"
            android:layout_marginTop="@dimen/d23"
            android:textSize="@dimen/s13"
            android:textColor="@color/FC_FEDB40"/>
        <ImageView
            android:id="@+id/iv_home_gold_lqb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d23"
            android:layout_marginLeft="@dimen/d23"
            android:src="@drawable/home_usually_gold"
            android:visibility="invisible"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/d40">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/d13"
                android:layout_height="@dimen/d13"
                android:src="@drawable/home_lqg_dqb_dot_unit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="零钱罐定期标"
                android:layout_marginLeft="@dimen/d10"
                android:textSize="@dimen/s13"
                android:textColor="@color/FC_666666"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_lqg_dqb_earnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无收益"
            android:layout_marginTop="@dimen/d23"
            android:layout_marginLeft="@dimen/d23"
            android:textSize="@dimen/s13"
            android:textColor="@color/FC_FD8B48"/>
        <ImageView
            android:id="@+id/iv_home_usually_gold_lqgdqb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d23"
            android:layout_marginLeft="@dimen/d23"
            android:src="@drawable/home_usually_gold"
            android:visibility="invisible"/>

    </RelativeLayout>

</LinearLayout>