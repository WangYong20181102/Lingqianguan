<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/keyboard"
        android:background="#FCFCFC"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d23"
            android:text="请输入支付密码"
            android:textColor="@color/FC_333333"
            android:textSize="@dimen/s18"/>

        <TextView
            android:id="@+id/tv_payType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d10"
            android:text="从零钱宝投资"
            android:textColor="@color/FC_333333"
            android:textSize="@dimen/s13"/>

        <TextView
            android:id="@+id/tv_paymentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_payType"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d10"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="@dimen/s25"/>

        <RelativeLayout
            android:id="@+id/rl_inputPassword"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/d55"
            android:layout_below="@+id/tv_paymentValue"
            android:layout_marginLeft="@dimen/d21"
            android:layout_marginRight="@dimen/d21"
            android:layout_marginTop="@dimen/d24">

            <LinearLayout
                android:id="@+id/ll_passwordCircle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/password_textfield"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/d20"
                    android:src="@drawable/pay_password_circle"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/d20"
                    android:src="@drawable/pay_password_circle"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/d20"
                    android:src="@drawable/pay_password_circle"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/d20"
                    android:src="@drawable/pay_password_circle"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/d20"
                    android:src="@drawable/pay_password_circle"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/d20"
                    android:src="@drawable/pay_password_circle"
                    android:visibility="invisible"/>
            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/bt_closePayment"
            android:layout_width="@dimen/d18"
            android:layout_height="@dimen/d18"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/d15"
            android:layout_marginTop="@dimen/d15"
            android:background="@null"
            android:src="@drawable/delete_gray_password"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d260"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d220"
            android:layout_alignParentBottom="true"
            android:background="#e6e6e6"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_keyboard_one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>

                <TextView
                    android:id="@+id/pay_keyboard_two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>

                <TextView
                    android:id="@+id/pay_keyboard_three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_keyboard_four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>

                <TextView
                    android:id="@+id/pay_keyboard_five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>

                <TextView
                    android:id="@+id/pay_keyboard_sex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_keyboard_seven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>

                <TextView
                    android:id="@+id/pay_keyboard_eight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>

                <TextView
                    android:id="@+id/pay_keyboard_nine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pay_keyboard_space"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment2"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:textColor="@color/FC_333333"/>

                <TextView
                    android:id="@+id/pay_keyboard_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment1"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s30"/>

                <LinearLayout
                    android:id="@+id/pay_keyboard_del"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bt_investment2"
                    android:contentDescription="@string/action_settings"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/d30"
                        android:layout_height="@dimen/d30"
                        android:src="@drawable/keyboard_del"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_circleprogress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d260"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.wtjr.lqg.widget.CircleProgress
                android:id="@+id/circleprogress"
                android:layout_width="82dp"
                android:layout_height="82dp"/>

            <TextView
                android:id="@+id/tv_verify_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d12"
                android:gravity="center"
                android:text="@string/verify_success"
                android:textColor="@color/FC_FF8F00"
                android:textSize="@dimen/d15"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_error_problem_linear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d260"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/pay_password_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d21"
                android:layout_marginTop="@dimen/d25"
                android:text="支付密码错误，你还有4次机会"
                android:textColor="@color/FC_FF8F00"
                android:textSize="@dimen/s15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/d71"
                android:background="@color/FC_F4F4F4"
                android:orientation="vertical"
                android:paddingTop="@dimen/d39">

                <TextView
                    android:id="@+id/resume_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="重新输入 >"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s18"/>


                <TextView
                    android:id="@+id/forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d20"
                    android:text="忘记密码 >"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s18"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>