<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_noData"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/ll_item_on_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lmage_lmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d65"
            android:src="@drawable/wt_notdata_head"/>

        <TextView
            android:id="@+id/tv_noDataContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d20"
            android:layout_marginTop="@dimen/d22"
            android:text="暂无数据"
            android:textColor="@color/FC_999999"
            android:textSize="@dimen/s14"/>

        <Button
            android:id="@+id/bt_investment"
            android:layout_width="@dimen/d175"
            android:layout_height="@dimen/d40"
            android:background="@drawable/btn_bg_drawable2"
            android:paddingLeft="@dimen/d20"
            android:paddingRight="@dimen/d20"
            android:text="立即投资"
            android:textColor="@color/white"
            android:textSize="@dimen/s15"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>