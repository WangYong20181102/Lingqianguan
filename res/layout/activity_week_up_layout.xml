<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_roll_out"
        android:background="@color/color_app_bg"
        android:orientation="vertical">


        <com.wtjr.lqg.widget.StatusBarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wwe_gradual_change_bg" />

        <include layout="@layout/include_activity_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_app_bg"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wwe_gradual_change_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_layout_lilv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d15"
                        android:layout_marginRight="@dimen/d15"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d13"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_bid_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/s28" />

                                <TextView
                                    android:id="@+id/tv_per_cen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/tv_bid_rate"
                                    android:layout_alignBottom="@+id/tv_bid_rate"
                                    android:layout_marginLeft="@dimen/d1"
                                    android:layout_toRightOf="@+id/tv_bid_rate"
                                    android:text="%"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/s15" />
                            </LinearLayout>

                        </LinearLayout>

                        <!--<RelativeLayout-->
                        <!--android:layout_width="@dimen/d37"-->
                        <!--android:layout_height="@dimen/d15"-->
                        <!--android:layout_marginTop="@dimen/d6"-->
                        <!--android:layout_toRightOf="@+id/linear_layout_lilv">-->

                        <!--<ImageView-->
                        <!--android:layout_width="@dimen/d37"-->
                        <!--android:layout_height="@dimen/d15"-->
                        <!--android:src="@drawable/creditor_transfer_add_ll_icon_white"-->
                        <!--android:visibility="invisible" />-->

                        <TextView
                            android:id="@+id/tv_add_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/d8"
                            android:layout_toRightOf="@+id/linear_layout_lilv"
                            android:text="+0.5%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/s11"
                            android:visibility="gone" />
                        <!--</RelativeLayout>-->
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_lock_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d15"
                        android:layout_marginRight="@dimen/d15"
                        android:text="7天锁定中"
                        android:textColor="#ccffffff"
                        android:textSize="@dimen/s12" />

                    <View
                        android:layout_width="@dimen/d40"
                        android:layout_height="@dimen/d0.5"
                        android:layout_marginLeft="@dimen/d15"
                        android:layout_marginRight="@dimen/d15"
                        android:layout_marginTop="@dimen/d9"
                        android:background="#66ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d15"
                        android:layout_marginRight="@dimen/d15"
                        android:layout_marginTop="@dimen/d16"
                        android:text="投资金额"
                        android:textColor="#ccffffff"
                        android:textSize="@dimen/s12" />

                    <TextView
                        android:id="@+id/tv_investment_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d15"
                        android:layout_marginRight="@dimen/d15"
                        android:layout_marginTop="@dimen/d5"
                        android:text="¥"
                        android:textColor="@color/white"
                        android:textSize="@dimen/s18" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d0.5"
                        android:layout_marginLeft="@dimen/d15"
                        android:layout_marginRight="@dimen/d15"
                        android:layout_marginTop="@dimen/d29"
                        android:background="#66ffffff" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d67">

                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d67"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/wwu_gif_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d67"
                            android:layout_marginLeft="@dimen/d15"
                            android:layout_marginRight="@dimen/d15"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="累计收益"
                                    android:textColor="#ccffffff"
                                    android:textSize="@dimen/s12" />

                                <TextView
                                    android:id="@+id/tv_accumulated_earnings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="¥"
                                    android:textColor="#ccffffff"
                                    android:textSize="@dimen/s13" />

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/d0.5"
                                android:layout_height="@dimen/d35"
                                android:background="#66ffffff" />

                            <LinearLayout
                                android:layout_width="@dimen/d0"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d15"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待获收益"
                                    android:textColor="#ccffffff"
                                    android:textSize="@dimen/s12" />

                                <TextView
                                    android:id="@+id/tv_obtained"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="¥"
                                    android:textColor="#ccffffff"
                                    android:textSize="@dimen/s13" />
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_activity_explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/d15"
                    android:paddingTop="@dimen/d15"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d15"
                            android:src="@drawable/week_up_icon_statement" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d10"
                            android:text="活动说明: "
                            android:textColor="@color/FC_999999"
                            android:textSize="@dimen/s13" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_add_rate_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加息幅度-2%\n加息时长-即日起，30天"
                        android:textColor="@color/FC_999999"
                        android:textSize="@dimen/s13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/d5"
                    android:paddingLeft="@dimen/d15"
                    android:paddingRight="@dimen/d15"
                    android:paddingTop="@dimen/d5">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d33"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="交易编号"
                            android:textColor="@color/FC_999999"
                            android:textSize="@dimen/s13" />

                        <TextView
                            android:id="@+id/tv_trading_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="215511222"
                            android:textColor="@color/FC_777777"
                            android:textSize="@dimen/s13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="投资时间"
                            android:textColor="@color/FC_999999"
                            android:textSize="@dimen/s13" />

                        <TextView
                            android:id="@+id/tv_investment_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/FC_777777"
                            android:textSize="@dimen/s13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="当前利率"
                            android:textColor="@color/FC_999999"
                            android:textSize="@dimen/s13" />

                        <TextView
                            android:id="@+id/tv_current_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/FC_777777"
                            android:textSize="@dimen/s13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="计息日期"
                            android:textColor="@color/FC_999999"
                            android:textSize="@dimen/s13" />

                        <TextView
                            android:id="@+id/tv_interest_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/FC_777777"
                            android:textSize="@dimen/s13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="到期时间"
                            android:textColor="@color/FC_999999"
                            android:textSize="@dimen/s13" />

                        <TextView
                            android:id="@+id/tv_due_to_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/FC_777777"
                            android:textSize="@dimen/s13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="收益方式"
                            android:textColor="@color/FC_999999"
                            android:textSize="@dimen/s13" />

                        <TextView
                            android:id="@+id/tv_earring_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="先息后本，按周期结息"
                            android:textColor="@color/FC_777777"
                            android:textSize="@dimen/s13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d33">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="退出方式"
                            android:textColor="@color/FC_999999"
                            android:textSize="@dimen/s13" />

                        <TextView
                            android:id="@+id/tv_exit_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="7天锁定,锁定期后自由转出"
                            android:textColor="@color/FC_777777"
                            android:textSize="@dimen/s13" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d10"
                    android:layout_marginTop="@dimen/d10"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <com.wtjr.lqg.widget.AboutLQGLayoutItem
                        android:id="@+id/alli_wwu_jiekuan_list"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d48"
                        app:com_textContent="借款列表">

                    </com.wtjr.lqg.widget.AboutLQGLayoutItem>

                    <View
                        style="@style/line_h6"
                        android:layout_marginLeft="@dimen/d15" />

                    <com.wtjr.lqg.widget.AboutLQGLayoutItem
                        android:id="@+id/alli_wwu_service_agreement"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d48"
                        app:com_textContent="服务协议">

                    </com.wtjr.lqg.widget.AboutLQGLayoutItem>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_roll_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d50"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wwu_roll_out_bg"
        android:enabled="false"
        android:gravity="center"
        android:text="转出"
        android:textColor="@color/white"
        android:textSize="@dimen/s18" />
</RelativeLayout>