<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/immersion_status"
              android:orientation="vertical">

    <include layout="@layout/include_activity_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_bg"
        android:orientation="vertical">

        <com.wtjr.lqg.widget.UsuallyLayoutItem
            android:id="@+id/uli_pay_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            app:com_ImageLeftMarginL="1dp"
            app:com_textTvContentL="支付密码"
            app:com_textTvContentLMarginL="@dimen/d12"/>

        <View style="@style/line"/>

        <com.wtjr.lqg.widget.UsuallyLayoutItem
            android:id="@+id/uli_rechargePassageway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:com_ImageLeftMarginL="1dp"
            app:com_textTvContentL="第三方充值通道"
            app:com_textTvContentLMarginL="@dimen/d12"/>
    </LinearLayout>

</LinearLayout>