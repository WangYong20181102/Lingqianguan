<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/immersion_status"
    android:orientation="vertical">

    <include layout="@layout/include_activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d50"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pay_back_password"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d30"
            android:layout_gravity="center_horizontal"
            android:text="请确认你的手机号"
            android:textColor="@color/FC_999999"
            android:textSize="@dimen/s15"/>
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d15"
            android:layout_gravity="center_horizontal"
            android:text="182******18"
            android:textColor="@color/FC_FF8F00"
            android:textSize="@dimen/s18"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d15"
            android:layout_gravity="center_horizontal"
            android:text="现在能否正常接收短信验证码"
            android:textColor="@color/FC_999999"
            android:textSize="@dimen/s15"/>
        <Button
            android:id="@+id/btn_can_receive"
            android:layout_width="@dimen/d175"
            android:layout_height="@dimen/d45"
            android:layout_marginTop="@dimen/d30"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pay_back_password_btn_bg"
            android:text="可以接收"
            android:textColor="@color/FC_FF8F00"
            android:textSize="@dimen/s17"/>
        <Button
            android:id="@+id/btn_no_receive"
            android:layout_width="@dimen/d175"
            android:layout_height="@dimen/d45"
            android:layout_marginTop="@dimen/d15"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pay_back_password_btn_bg"
            android:text="无法接收"
            android:textColor="@color/FC_FF8F00"
            android:textSize="@dimen/s17"/>
    </LinearLayout>

</LinearLayout>