<?xml version="1.0" encoding="utf-8"?>
<!-- 登录页面布局 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/immersion_status"
    android:orientation="vertical">

    <!-- 标题 -->

    <include layout="@layout/include_activity_title"/>

    <LinearLayout
        style="@style/layout_bg"
        android:layout_marginTop="@dimen/d20"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <com.wtjr.lqg.widget.CircleImageView
            android:id="@+id/civ_head_picture"
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d80"
            android:src="@drawable/lingmeimei"
            app:civ_border_color="#ffffff"
            app:civ_border_overlay="true"/>

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d28"
            android:layout_marginTop="@dimen/d18"
            android:textColor="@color/FC_333333"
            android:textSize="@dimen/s15"/>

        <com.wtjr.lqg.widget.LineEditTextPassword
            android:layout_width="match_parent"
            android:layout_height="@dimen/d53"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d35"
            android:layout_marginLeft="@dimen/d48"
            android:layout_marginRight="@dimen/d48"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_account_regist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/register_name"
                android:textColor="@color/FC_FF9900"
                android:textSize="@dimen/s13"/>

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/login_forget_password"
                android:textColor="@color/FC_FF9900"
                android:textSize="@dimen/s13"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/buttonStyle_1"
            android:layout_height="@dimen/d50"
            android:layout_marginTop="@dimen/d44"
            android:enabled="false"
            android:text="@string/login_name"/>


        <TextView
            android:id="@+id/tv_switch_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d25"
            android:gravity="center"
            android:text="@string/login_switch_account"
            android:textColor="@color/FC_FF9900"
            android:textSize="@dimen/s15"/>
    </LinearLayout>

</LinearLayout>